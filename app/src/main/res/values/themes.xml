<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouYLBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HouYLBase.Fullscreen" parent="Theme.HouYLBase">
        <item name="android:actionBarStyle">@style/Widget.Theme.HouYLBase.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.HouYLBase.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- 1.自定义主题 -->
    <style name="AppTheme.LaunchTheme" parent="Theme.HouYLBase.NoActionBar">
        <!-- 设置背景图片 -->
        <item name="android:windowBackground">@drawable/basemodule_div</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>