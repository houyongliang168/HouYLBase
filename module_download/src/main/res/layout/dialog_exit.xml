<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_roundborder_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="37dp"
        android:paddingRight="37dp"
        android:text="您确定要退出吗？"
        android:textColor="@color/color666666"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_exit_false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin10"
            android:layout_weight="1"
            android:background="@drawable/shape_login_cancel"
            android:gravity="center"
            android:padding="@dimen/margin8"
            android:text="取消"
            android:textColor="@color/colorff5722"
            android:textSize="@dimen/text15" />


        <TextView
            android:id="@+id/dialog_exit_true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin15"
            android:layout_weight="1"
            android:background="@drawable/shape_login_true"
            android:gravity="center"
            android:padding="@dimen/margin8"
            android:text="确定"
            android:textColor="@color/colorffffff"
            android:textSize="@dimen/text15" />

    </LinearLayout>


</LinearLayout>